<?xml version="1.0" encoding="UTF-8"?>
<project name="pyramid" default="all">
  
  
  <property file="pyramid-jar.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/antlr-runtime-3.5.jar"/>
    <pathelement location="${basedir}/lib/apache-log4j-extras-1.2.17.jar"/>
    <pathelement location="${basedir}/lib/asm-4.1.jar"/>
    <pathelement location="${basedir}/lib/asm-commons-4.1.jar"/>
    <pathelement location="${basedir}/lib/commons-beanutils-1.9.1.jar"/>
    <pathelement location="${basedir}/lib/commons-collections4-4.0.jar"/>
    <pathelement location="${basedir}/lib/commons-configuration-1.10.jar"/>
    <pathelement location="${basedir}/lib/commons-io-2.4.jar"/>
    <pathelement location="${basedir}/lib/commons-lang3-3.3.2.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.1.3.jar"/>
    <pathelement location="${basedir}/lib/commons-math3-3.3.jar"/>
    <pathelement location="${basedir}/lib/elasticsearch-1.5.1.jar"/>
    <pathelement location="${basedir}/lib/groovy-all-2.4.0.jar"/>
    <pathelement location="${basedir}/lib/guava-18.0.jar"/>
    <pathelement location="${basedir}/lib/jackson-annotations-2.4.0.jar"/>
    <pathelement location="${basedir}/lib/jackson-core-2.4.1.1.jar"/>
    <pathelement location="${basedir}/lib/jackson-databind-2.4.1.3.jar"/>
    <pathelement location="${basedir}/lib/jna-4.1.0.jar"/>
    <pathelement location="${basedir}/lib/jopt-simple-4.9-beta-1.jar"/>
    <pathelement location="${basedir}/lib/jts-1.13.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/jwnl-1.3.3.jar"/>
    <pathelement location="${basedir}/lib/log4j-1.2.17.jar"/>
    <pathelement location="${basedir}/lib/log4j-api-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-core-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-flume-ng-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-jcl-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-nosql-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-taglib-2.0.jar"/>
    <pathelement location="${basedir}/lib/log4j-web-2.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-analyzers-common-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/lucene-codecs-4.9.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-core-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/lucene-expressions-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/lucene-grouping-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/lucene-highlighter-4.10.4.jar"/>
