    <pathelement location="${basedir}/lib/lucene-spatial-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/lucene-suggest-4.10.4.jar"/>
    <pathelement location="${basedir}/lib/mahout-math-0.10.1.jar"/>
    <pathelement location="${basedir}/lib/sigar-1.6.4.jar"/>
    <pathelement location="${basedir}/lib/spatial4j-0.4.1.jar"/>
    <pathelement location="${basedir}/lib/stanford-corenlp-3.5.1.jar"/>
    <pathelement location="${basedir}/lib/stanford-postagger.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/src/main/module_main.xml"/>
  
  <import file="${basedir}/src/test/module_test.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.main, clean.module.test" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.main, compile.module.test" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.pyramid:jar" value="${basedir}/out/artifacts/pyramid_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.pyramid.jar" value="${artifacts.temp.dir}/pyramid.jar"/>
  </target>
  
  <target name="artifact.pyramid:jar" depends="init.artifacts, compile.module.main" description="Build &#39;pyramid:jar&#39; artifact">
    <property name="artifact.temp.output.pyramid:jar" value="${artifacts.temp.dir}/pyramid_jar"/>
    <mkdir dir="${artifact.temp.output.pyramid:jar}"/>
    <jar destfile="${temp.jar.path.pyramid.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${main.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.pyramid.jar}" tofile="${artifact.temp.output.pyramid:jar}/pyramid.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.pyramid:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.pyramid:jar}"/>
    <copy todir="${artifact.output.pyramid:jar}">
      <fileset dir="${artifact.temp.output.pyramid:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>